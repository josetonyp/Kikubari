#!/usr/bin/env ruby
require 'date'
require 'getoptlong'
require 'fileutils'
require 'yaml'
require 'pathname'
require "stringio"
require 'open3'
require 'git'

require '../lib/kikubari'

##Globals
debug, dry_run, rollback = false, false, false
parser = GetoptLong.new

parser.set_options( ["-D", "--debug", GetoptLong::NO_ARGUMENT],
                    ["-d", "--dry", GetoptLong::NO_ARGUMENT],
                    ["-b", "--rollback", GetoptLong::NO_ARGUMENT]
                    )

loop do
  begin
      opt, arg = parser.get
      break if not opt

      case opt
        when "-D"
          debug = true;
          break
        when "-d"
          dry_run = true;
        when "-b"
          rollback = true;
      end

    rescue => err
      break
    end
end

if (!ARGV.first.nil? and File.directory? ARGV.first.to_s)
    folder = ARGV.first.to_s
else
  begin
    print "Please insert the project folder to deploy: "
    folder = gets.chomp
  end until begin

  ##FileUtils.cd folder
  puts "Deploying to #{folder}"
  true

  rescue Exception => e
    print e.message
    puts e.backtrace.inspect
    false
  end
end

folder = Pathname.new(folder).realpath
p "Deploying to #{ Pathname.new( folder ).realpath }/..."
p "Deploying ..."

Kikubari::Deploy.new(
    Kikubari::Deploy::Configuration.new(
      "#{folder}/deploy.yml",
      deploy_folder:  folder,
      debug: debug,
      dry_run: dry_run,
      rollback: rollback ))

